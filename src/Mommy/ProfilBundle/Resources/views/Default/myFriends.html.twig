<h1>Mes Mommy<span>Friends</span></h1>
<div>
{% for friend in friends %}
<div class='net-item' data-id='{{ friend.id }}'>
{% if friend.photo|length > 0 %}
<img src='{{ friend.photo }}' class='miniature' /><br/>
{% else %}
<img src='/img/logos/mv-landeau-1000x1077.jpg' class='miniature' /><br/>
{% endif %}
{{ friend.firstname }} {{ friend.lastname|slice(0,1) }}.<div>
{% endfor %}
<p><a href='#{{ path('profil-all-friends') }}'></a></p>
</div>
<script>
$(".friend").click(function () {
	window.location.hash = '#/profil/voir/'+$(this).attr('data-id');
});
</script>