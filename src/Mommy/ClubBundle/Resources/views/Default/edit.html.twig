<div class='block'>
	<div class='content' id='club'>
		<form name="club" method="post" action="" enctype="multipart/form-data">
		<table>
			<tr>
				<td rowspan='5' width='300'>
					{% if club.photo|length > 0 %}
					<div style='background-image:url({{ club.photo }})' class='upload' id='photo'></div>
					{% else %}
					<div style='background-image:url(/img/logos/mv-landeau-1000x1077.jpg)' class='upload' id='photo'></div>
					{% endif %}
				</td>
				<th>
					{{ form_widget(form.name, {value: club.name}) }}
				</th>
			</tr>
			<tr>
				<th>
					{% if club.address|length > 0 %}
					{{ form_widget(form.address, {value: club.address.literal}) }}
					{% else %}
					{{ form_widget(form.address) }}
					{% endif %}
				</th>
			</tr>
			<tr>
				<td>
					{{ form_widget(form.description, {value: club.descfr}) }}
				</td>
			</tr>
			<tr>
				<td>
					{{ form_widget(form.photo) }}
				</td>
			</tr>
			<tr>
				<td>
					{{ form_widget(form.keywords, {value: club.keys}) }}
				</td>
			</tr>
		</table>
		{{ form_rest(form) }}
		<input class='btn-style right' type='submit' value='Sauvegarder' />
		</form>
	</div>
</div>
<script>
function previewPhoto(input) {
	if (input.files && input.files[0]) {
		var reader = new FileReader();
		reader.onload = function (e) {
			$('#photo').css("background-image", "url("+e.target.result+")");
		}
		reader.readAsDataURL(input.files[0]);
	}
}

$("#club_photo").change(function(){
	previewPhoto(this);
});

initGeoComplete('#club_address',null);
